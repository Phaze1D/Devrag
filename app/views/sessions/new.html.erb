<div class="container">

    <div class="row">
        <div class="col-xs-12 text-center">
            <h1 class="title" style="font-size: 40pt; margin-bottom: 0px;">Devrag</h1>

        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 text-center">
            <%= form_for(:session, url: sessions_path) do |f| %>

            <div class="login-section" style="margin-top: 100px">

                <div class="row">
                    <div class="col-xs-12" style="margin-bottom: 15px">
                        <%= link_to 'Sign up', new_user_path, class: 'login-button text-center undecorated-link-w', style: 'display: block; margin-bottom: 5px; width: 100%;' %>
                        <div class="break-line center" style="width: 95%;"></div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-12">
                        <div class="alert-danger main-font" style="background-color: transparent; font-size: 13px">
                            <%= flash[:danger] %>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-12">
                        <%= f.text_field :identity, class: 'form-input fill-width main-font login-form',
                                         placeholder: 'Username or Email', autocomplete: 'off' %>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-12">
                        <%= f.password_field :password, class: 'form-input fill-width main-font login-form',
                                             placeholder: 'Password',  style: 'margin-top: 20px', autocomplete: 'off' %>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-6 col-xs-offset-6 text-right">
                        <%= link_to 'Forgot', '#', style: 'font-size: 12px', class: 'main-font undecorated-link-w' %>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-12">
                        <%= f.submit 'Login', class: 'login-button undecorated-link-w',
                                     style: 'margin-top: 15px; width: 100%; font-size: 16px;' %>
                    </div>
                </div>

            <% end %>

                <div class="row">
                    <div class="col-xs-12">
                        <div class="break-line center" style="top: 0; margin-top: 15px; width: 95%; "></div>

                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-12" style="margin-top: 30px">

                        <input type="submit" class="signup-b title-2-alive text-right" style="font-size: 11pt; color: #93A1A1; background-color: transparent" value="Login via Github">

                    </div>
                </div>
            </div>




        </div>
    </div>
</div>