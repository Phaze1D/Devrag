<div id="uta" class="row uta-class" data-ani="0">
    <div class="col-xs-12 user-tool-area">
        <div class="row">
            <div class="col-xs-8 col-overflow-x">
                <%= link_to 'Some Name', tool_path(12), class: 'tool-name', style: 'font-size: 15pt;' %>
            </div>

            <% if is_current_user? user %>
                <div class="col-xs-4 text-right">
                    <button class="unfollow-button">Unfollow</button>
                </div>
            <% end %>

        </div>
        <div class="row">
            <div class="col-xs-8 col-overflow-x">
                <%= link_to 'www.website.com', '#', class: 'main-font undecorated-link' %>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12 col-overflow-x">
                <p class="title-2-dead" style="font-size: 9pt; margin: 5px 0 0 0">submitted
                    by <%= link_to 'username', user_path(12), class: 'title-2-dead undecorated-link' %></p>

            </div>
        </div>


        <div class="row">
            <div class="col-xs-3" style="padding-right: 0">
                <div class="main-font lcf-section col-overflow-x">
                    <% if likes_tool tool %>
                        <%= image_tag 'liked_icon.png', class: 'like-image', 'data-likes' => '1' %>
                    <% else %>
                        <%= image_tag 'like_icon.png', class: 'like-image', 'data-likes' => '0' %>
                    <% end %>
                    123
                </div>
            </div>
            <div class="col-xs-3" style="padding-right: 0">
                <div class="main-font lcf-section col-overflow-x">
                    <%= image_tag 'comment_icon.png', class: 'comment-image' %>
                    12423
                </div>
            </div>

            <div class="col-xs-4" style="padding-right: 0">
                <div class="main-font lcf-section col-overflow-x">
                    <%= link_to  tool_followers_path(12), class: 'followers-a' do %>
                        <%= image_tag 'followers_icon.png', id: 'followers_icon' %>
                        1234
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>

