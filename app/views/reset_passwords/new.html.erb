<div class="container">
				<div class="row">
								<div class="col-xs-12 text-center">
												<h2 class="title" style="margin-top: 100px">Password Reset</h2>
								</div>
				</div>

				<div class="row">
								<div class="col-xs-12 text-center">
												<p class="main-font text-info" style="font-size: 16px">
																Please enter your Email or Username
												</p>
								</div>
				</div>

				<div class="row">
								<%= form_for(:reset_passwords, url: reset_passwords_path) do |f| %>
								<div class="col-xs-12 col-md-6 col-md-offset-3">
												<%= f.email_field :email, class: 'form-control-large main-font' %>
								</div>

                <div class="col-xs-12 col-md-6 col-md-offset-3" style="margin-top: 10px">
                        <%= f.submit "Submit", class: "title-2-alive text-center submit-reset" %>
                </div>
								<% end %>
				</div>
</div>
