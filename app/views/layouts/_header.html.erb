        <input class="form-control main-font center login-form"
               placeholder="Password" style="top: 33%" , type="password">
        <%= link_to 'Forgot', '#', class: 'text-right main-font login-link' %>
        <button class="login-button center" style="top: 56%">Login</button>
        <div class="break-line center" style="top: 68%"></div>
        <button class="login-button  center" style="top: 85%">Sign Up</button>
    <% else %>

        <button class="login-button center text-left" style="top: 17%">Home</button>
        <button class="login-button center text-left" style="top: 33%">Profile</button>
        <button class="login-button center text-left" style="top: 49%">
            Notifications
            <div class="notification-bubble text-center center" style="opacity: 1;left: 90%; top: 50%;">
                <h6 class="center notification-text main-font"
                    style="color: #d5d5d5; font-size: 8pt">300</h6>
            </div>
        </button>
        <button class="login-button center text-left" style="top: 65%">Settings</button>
        <div class="break-line center" style="top: 75%"></div>
        <button class="login-button  center text-left" style="top: 85%">Sign Out</button>
