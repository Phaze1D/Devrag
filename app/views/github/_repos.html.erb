<% repos.each do |repo| %>
  <% unless current_user.tools.where(name: repo.full_name).any? %>
    <div class="row">
        <div class="col-xs-12">
            <div class="github-repo-div">
                <div class="row">
                    <div class="col-xs-8">
                        <div class="row">
                            <div class="col-xs-12 col-overflow-x">
                                <h4 class="tool-name" style="font-size: 16px; margin-bottom: 5px;"><%= repo.full_name %></h4>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-overflow-x">
                                <%= link_to repo.html_url, repo.html_url, class: 'main-font undecorated-link', style: 'font-size: 12px; margin-bottom: 15px;' %>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <p class="main-font text-info" style="margin: 5px 0 0; word-wrap: break-word; font-size: 12px"><%= repo.description %></p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">

                            </div>
                        </div>
                    </div>
                    <div class="col-xs-4" style="position: absolute;height: 100%;right: 0px;top: 10px;">
                        <div class="add-div">
                            <%= link_to 'Add', new_user_tool_path(user_id: current_user.id, repo_id: repo.id), class: 'main-font undecorated-link add-link center-hor center-ver' %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
  <% else %>
    <div class="row">
        <div class="col-xs-12">
            <div class="github-repo-div">
                <div class="row">
                    <div class="col-xs-8">
                        <div class="row">
                            <div class="col-xs-12 col-overflow-x">
                                <h4 class="tool-name" style="font-size: 16px; margin-bottom: 5px;"><%= repo.full_name %></h4>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-overflow-x">
                                <%= link_to repo.html_url, repo.html_url, class: 'main-font undecorated-link', style: 'font-size: 12px; margin-bottom: 15px;' %>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <p class="main-font text-info" style="margin: 5px 0 0; word-wrap: break-word; font-size: 12px"><%= repo.description %></p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">

                            </div>
                        </div>
                    </div>
                    <div class="col-xs-4" style="position: absolute;height: 100%;right: 0px;top: 10px;">
                        <div class="add-div" style="background-color: deepskyblue">
                            <%= link_to 'Ready', tool_path(id: current_user.tools.where(name: repo.full_name).first.id), class: 'main-font undecorated-link add-link center-hor center-ver' %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
  <% end %>
<% end %>
