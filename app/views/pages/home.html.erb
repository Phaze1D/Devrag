<div class="container-fluid">

    <div class="row">
        <div class="col-md-4 col-md-offset-4
                    col-lg-2 col-lg-offset-5
                    col-xs-8 col-xs-offset-2
                    text-center" style="min-width: 200px">
            <h1 class="title main-title">Devrag</h1>

        </div>
    </div>

    <%= form_tag search_path, method: 'get', id: 'search-form'  do  %>
        <div class="row" style="margin-top: 80px; background-color: white;">
            <div class="col-lg-2
                col-md-2 col-md-offset-2
                col-sm-4 col-sm-offset-0
                col-xs-8 col-xs-offset-2
                text-center input-div">

                <h4 id="lang-title" class="title-2-alive underline-alive">Language</h4>
                <%= text_field_tag :language, nil ,class: 'form-input sinput fill-width main-font', autocomplete: 'off' %>
                <ul class="drop-list">

                </ul>
            </div>

            <div class="col-lg-2
                col-md-2 col-md-offset-1
                col-sm-4 col-sm-offset-0
                col-xs-8 col-xs-offset-2
                text-center input-div">

                <h4 id="plat-title" class="title-2-alive underline-alive">Platform</h4>
                <%= text_field_tag :platform, nil ,class: 'form-input sinput fill-width main-font', autocomplete: 'off'  %>
                <ul class="drop-list">

                </ul>
            </div>

            <div class="col-lg-2
                col-md-2 col-md-offset-1
                col-sm-4 col-sm-offset-0
                col-xs-8 col-xs-offset-2
                text-center input-div">

                <h4 id="use-title" class="title-2-alive underline-alive">Use</h4>
                <%= text_field_tag :use, nil ,class: 'form-input sinput fill-width main-font', autocomplete: 'off'  %>
                <ul class="drop-list">

                </ul>
            </div>
        </div>
        <div id="lpu-hidden-box" class="row">
            <div class="col-lg-8 col-lg-offset-2
                    col-md-8 col-md-offset-2
                    col-sm-12 col-sm-offset-0
                    col-xs-8 col-xs-offset-2
                    underline-dead text-center" style="height: 50px; min-width: 200px; position: absolute; background-color: white">
                <%= image_tag 'dropdown.png', id: 'lpu-down-arror', class: 'down-arror', autocomplete: 'off' %>
            </div>
        </div>

    <% end %>


    <div class="row" style="margin-top: 200px">
      <div class="col-xs-12 text-center">
          <div class="ad-div center-block">
            <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
            <!-- homepage -->
            <ins class="adsbygoogle"
                 style="display:inline-block;width:728px;height:90px"
                 data-ad-client="ca-pub-2067437180761728"
                 data-ad-slot="5497494695"></ins>
            <script>
            (adsbygoogle = window.adsbygoogle || []).push({});
            </script>
          </div>
      </div>
    </div>


    <h5 class="main-font text-center" style="color: #cccccc; display: inline-block; position: fixed; bottom: 10px; z-index: -100">
      Total Number of Tools: <%= @tool_count %>
    </h5>


    <div class="mediadiv"></div>
</div>
