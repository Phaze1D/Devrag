<!--
    User picture that liked
    Small intro
    Like icon
    Date and time
-->

<div class="noti-container">

    <%= link_to user_path(12), class: 'undecorated-link-w noti-link' do %>
        <%= image_tag 'profile_img.jpg', class: 'noti-profile-img' %>
    <% end %>

    <%= link_to '#', class: 'undecorated-link-w noti-link ', style: 'width: 200px;' do %>
        <div class="noti-p">
            <span class="span-no">SoAndS0</span>
            <span class="span-no" style="color: #93a1a1"><span style="color: #bdcfcf;">liked</span> your tool</span>
            <span class="span-yes">Some Tool</span>
        </div>

        <%= image_tag 'like_icon.png', class: 'noti-sm-icon' %>
        <div class="noti-date">
            November 15, 2015
        </div>
    <% end %>

    <%= image_tag 'remove_button.png', class: 'noti-cross' %>

</div>