<div id="uta" class="row uta-class" data-ani="0">
    <div class="col-xs-12 user-tool-area">
        <div class="row">
            <div class="col-xs-12">
                <h4 class="tool-name" style="font-size: 15pt;">Some Name</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <%= link_to 'www.website.com', '#', class: 'main-font' %>
            </div>
        </div>


        <div class="row">
            <div class="col-xs-3">
                <div class="">
                    <%= image_tag 'like_icon.png', id: 'like-image', style: 'margin: 10px 0 0 0;' %>
                    <p class="main-font comment-count" style="margin: 10px 0 0 0;">123</p>
                </div>
            </div>
            <div class="col-xs-3">
                <div class="">
                    <%= image_tag 'comment_icon.png', id: 'comment-image', style: 'margin: 10px 0 0 0;' %>
                    <p class="main-font comment-count" style="margin: 10px 0 0 0;">123</p>
                </div>
            </div>

            <div class="col-xs-4">
                <div class="">
                    <%= image_tag 'followers_icon.png', id: 'followers_icon', style: 'margin: 9px 0 0 0;' %>
                    <p class="main-font comment-count" style="margin: 10px 5px 0 0;">102783</p>
                </div>
            </div>

            <div class="col-xs-2">
                <div class="">
                    <%= image_tag 'tool_options_icon.png', id: 'options-image',
                                  style: 'margin: 10px 0 0 0;',
                                  class: 'option-js' %>
                </div>
            </div>
        </div>

        <div class="options-div row">
            <div class="col-xs-3 col-xs-offset-1 text-center" style="height: 100%; ">
                <%= link_to 'Notifiy', '#',
                            class: 'login-button center-ver undecorated-link'%>
            </div>

            <div class="col-xs-3 text-center" style="height: 100%">
                <%= link_to 'Edit', '#',
                            class: 'login-button center-ver undecorated-link' %>
            </div>

            <div class="col-xs-1  text-center" style="height: 100%">
                <div class="break-line center" style="height: 80%; width: 0; top: 50%"></div>

            </div>

            <div class="col-xs-3   text-center" style="height: 100%">
                <%= link_to 'Delete', '#',
                            class: 'login-button center-ver undecorated-link',
                            style: 'color: #cb4b16'%>
            </div>


            <!--
            if owner
                    Edit
                    Notify Followers
                    Delete
            else
                    Report
                -->
        </div>
    </div>
</div>

