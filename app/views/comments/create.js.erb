$('#ajax-comments').prepend('<%= escape_javascript( render partial: 'comments/comment_box', locals: {comment: @comment})%>');

tinymce.EditorManager.execCommand('mceAddEditor', true, 'reply-area-'+ "<%= @comment.id.to_s %>");

$("p:empty").remove();

$('p').each(function() {
    var $this = $(this);
    if($this.html().replace(/\s|&nbsp;/g, '').length == 0) {
        $this.remove();
    }
});