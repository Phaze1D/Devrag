<div id="header-div">
    <%= image_tag 'devrmenu.png', id: 'header-image', class: 'center' %>

    <% if true %>
            <h5 id="username-label" class="main-font">username</h5>
            <div class="notification-bubble text-center center" style="left: 125px; top: 50%">
                <h6 class="center notification-text main-font">300</h6>
            </div>
    <% end %>
</div>


<div id="menu-div">
    <% if false %>
        <input class="form-control main-font center login-form "
