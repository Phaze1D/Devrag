<div class="container">
				<div class="row">
								<div class="col-xs-12 text-center">
												<h2 class="title" style="margin-top: 100px">Update Password</h2>
								</div>
				</div>

				<div class="row">
								<%= form_for(@user, url: reset_password_path(params[:id]),html: {id: 'edit-reset-form'}) do |f| %>
								<%= f.hidden_field :reset_token, value: params[:id] %>
								<%= hidden_field_tag :email, params[:email] %>
								<div class="col-xs-12 col-md-6 col-md-offset-3" style="margin-top: 10px">
												<div class="row" style="margin: 20px 5px 25px 5px">
																<div class="col-md-12 error-area">
																				<%= f.password_field :password, class: 'form-control-large main-font user-input-reset', placeholder: 'Password', autocomplete: 'off' %>
																				<% if @user.errors[:password].size > 0 %>
																				<div class="error-div">
																								<ul>
																												<% @user.errors[:password].each do |error| %>
																												<li><%= error %></li>
																												<% end %>
																								</ul>
																				</div>
																				<% else %>
																				<div class="error-div" style="display: none">
																								<ul></ul>
																				</div>
																				<% end %>
																</div>
												</div>

												<div class="row" style="margin: 20px 5px 25px 5px">
																<div class="col-md-12 error-area">
																				<%= f.password_field :password_confirmation, class: 'form-control-large main-font user-input-reset', placeholder: 'Confirmation', autocomplete: 'off' %>
																				<% if @user.errors[:password_confirmation].size > 0 %>
																				<div class="error-div">
																								<ul>
																												<% @user.errors[:password_confirmation].each do |error| %>
																												<li><%= error %></li>
																												<% end %>
																								</ul>
																				</div>
																				<% else %>
																				<div class="error-div" style="display: none">
																								<ul></ul>
																				</div>
																				<% end %>
																</div>
												</div>

												<div class="row" style="margin: 20px 5px 25px 5px">
																<div class="col-xs-12">
																				<%= f.submit "Update", class: "title-2-alive text-center submit-reset" %>
																</div>
												</div>
								</div>
								<% end %>
				</div>
</div>
