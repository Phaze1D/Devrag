<div class="container">
    <div class="row">
        <div class="col-xs-12">

            <% if flash[:notice] %>
                <div class="row">
                    <div class="col-xs-12 col-md-6 col-md-offset-3">
                        <p class="main-font alert alert-info">
                            <%= flash[:notice] %>
                        </p>
                    </div>
                </div>
            <% end %>

            <div class="row">
                <div class="col-xs-12 col-md-4 col-md-offset-4">

                    <h3 class="github-header main-font text-right">
                        Repositories
                    </h3>

                </div>
            </div>

            <div class="row">
                <div class="col-xs-12 col-md-4 col-md-offset-4 text-center will-pag">
                    <%= will_paginate @repos, :previous_label => '←', :next_label => '→', :outer_window => 1, :inner_window => 2 %>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12 col-md-6 col-md-offset-3">
                    <div class="repos-area">
                        <%= display_repos(@repos).html_safe %>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-xs-12 col-md-4 col-md-offset-4 text-center will-pag" style="margin-top: 10px">
                    <%= will_paginate @repos, :previous_label => '←', :next_label => '→', :outer_window => 1, :inner_window => 2 %>
                </div>
            </div>

        </div>
    </div>
</div>