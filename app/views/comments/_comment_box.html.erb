<div class="row comment-box" style="margin-top: 15px">
    <div class="col-xs-12 main-parent">
        <p class="title-2-dead" style="font-size: 8pt; margin-bottom: 0px;">
            <%= link_to comment.user.username, user_path(comment.user), class: 'main-font comment-user' %>
            <%= time_ago_in_words(comment.created_at) %>
        </p>

        <div class="row">
            <div class="col-xs-12">
                <p class="user-comment main-font text-justify">
                    <%= comment.comment %>
                </p>
            </div>
        </div>

        <div class="row" style="margin: 2px 0 0px 0px">
            <div class="col-xs-2">
                <%= link_to 'Reply', '#', class: 'main-font title-2-dead comment-options reply-b', 'data-user' => 'username' %>
            </div>
        </div>


        <div class="reply-area" style="display: none">
            <%= form_for [comment.tool, Comment.new], url: tool_replies_path(comment.tool.id), html: {class: 'reply-form'} do |f| %>
                <%= f.hidden_field :comment_id, value: comment.id %>
                <div class="row">
                    <div class="col-xs-3">
                        <%= image_tag 'add_button2.png', class: 'comment-add-cl-t reply-add-img', style: 'margin: 5px 0px 0 35px; float: left' %>
                        <%= image_tag 'remove_button.png', class: 'comment-add-cl-t reply-rem-img', style: 'margin: 5px; float: left' %>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <%= f.text_area :comment, rows: 6, class: 'comment-area main-font ', id: 'comment-ta' %>
                        <div class="error-div" style="display: none; margin: 5px 35px; width: 89%">
                            <ul>
                            </ul>
                        </div>
                    </div>
                </div>
            <% end %>

        </div>


    </div>
</div>